<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://www.springframework.org/schema/beans" xmlns:context="http://www.springframework.org/schema/context"
	xmlns:mvc="http://www.springframework.org/schema/mvc"
	xsi:schemaLocation="
	http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
	http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.0.xsd
	http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-4.0.xsd"
	default-merge="true">
	<!-- Shiro配置 -->
	<bean id="shiroFilter" class="org.apache.shiro.spring.web.ShiroFilterFactoryBean">
		<property name="securityManager" ref="securityManager" />
		<property name="loginUrl" value="/login" />
		<property name="unauthorizedUrl" value="/login" />
		<property name="successUrl" value="/" />
	</bean>
	<!-- 安全相关FreeMarker配置 -->
	<bean id="securityFreemarkerConfigurer" abstract="true"
		parent="baseFreemarkerConfigurer">
		<property name="templatePaths">
			<list>
				<value>classpath:/coo/mvc/security/macros/</value>
			</list>
		</property>
		<property name="autoIncludes">
			<list>
				<value>security.ftl</value>
			</list>
		</property>
	</bean>
	<!-- 安全相关异常处理配置 -->
	<bean id="securityExceptionResolver" abstract="true"
		parent="baseExceptionResolver">
		<property name="exceptionMappings">
			<props>
				<prop key="coo.core.security.exception.AccessDeniedException">403</prop>
				<prop key="coo.core.security.exception.NotLogonException">404</prop>
			</props>
		</property>
	</bean>
	<!-- 自定义权限注解拦截器配置 -->
	<mvc:interceptors>
		<bean class="coo.mvc.security.interceptor.AuthInterceptor" />
	</mvc:interceptors>
</beans>