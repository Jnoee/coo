<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://www.springframework.org/schema/beans" xmlns:context="http://www.springframework.org/schema/context"
	xmlns:aop="http://www.springframework.org/schema/aop" xmlns:tx="http://www.springframework.org/schema/tx"
	xmlns:jdbc="http://www.springframework.org/schema/jdbc" xmlns:mvc="http://www.springframework.org/schema/mvc"
	xsi:schemaLocation="
	http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
	http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.0.xsd
	http://www.springframework.org/schema/jdbc http://www.springframework.org/schema/jdbc/spring-jdbc-4.0.xsd
	http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-4.0.xsd"
	default-lazy-init="true" default-merge="true">
	<!-- 加载Coo组件 -->
	<import resource="classpath:META-INF/coo/coo.core.xml" />
	<import resource="classpath:META-INF/coo/coo.mvc.xml" />
	<import resource="classpath:META-INF/coo/coo.core.security.xml" />
	<import resource="classpath:META-INF/coo/coo.mvc.security.xml" />

	<jdbc:initialize-database data-source="dataSource"
		ignore-failures="ALL">
		<jdbc:script location="classpath:h2.sql" />
	</jdbc:initialize-database>

	<bean id="sessionFactory" parent="securitySessionFactory">
		<property name="packagesToScan">
			<list>
				<value>coo.mvc.security.blank.entity</value>
			</list>
		</property>
	</bean>

	<bean id="freemarkerConfigurer" parent="securityFreemarkerConfigurer">
		<property name="templateLoaderPaths" value="classpath:/coo/mvc/security/blank/actions/" />
		<property name="enumPackages">
			<list>
				<value>coo.mvc.security.blank.enums</value>
			</list>
		</property>
		<property name="templatePaths">
			<list>
				<value>classpath:/coo/mvc/security/blank/macros/</value>
			</list>
		</property>
		<property name="autoIncludes">
			<list>
				<value>system.ftl</value>
			</list>
		</property>
	</bean>

	<!-- 加载应用组件 -->
	<context:component-scan base-package="coo.mvc.security.blank" />
</beans>